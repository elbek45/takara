# Takara DeFi Platform - Environment Configuration Example
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=5000
APP_NAME="Takara DeFi Platform"

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Solana Blockchain Configuration
SOLANA_NETWORK=mainnet-beta
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
PLATFORM_WALLET_ADDRESS=your_solana_wallet_address

# Token Configuration
USDT_TOKEN_MINT=Es9vMFrzaCERmJfrF4H2FYD4KCoNkY11McCe8BenwNYB
USDT_DECIMALS=6
TAKARA_TOKEN_MINT=
TAKARA_DECIMALS=6

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@takara.com

# Admin
ADMIN_EMAIL=admin@takara.com

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Session
SESSION_SECRET=your-session-secret

# Cron Jobs
ENABLE_CRON_JOBS=true
DAILY_REWARDS_CRON=0 0 * * *

# Platform Configuration
DEFAULT_USDT_APY=7.00
MIN_WITHDRAWAL_USDT=10
MIN_WITHDRAWAL_TAKARA=100
PLATFORM_FEE_PERCENTAGE=0

# NFT Storage
NFT_STORAGE_URL=https://nftstorage.link/ipfs/
IPFS_GATEWAY=https://ipfs.io/ipfs/

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# API Documentation
ENABLE_API_DOCS=true
API_DOCS_PATH=/api/docs
